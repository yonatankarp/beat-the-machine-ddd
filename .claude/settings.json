{
  "permissions": {
    "allow": [
      "Bash(./gradlew:*)",
      "WebFetch(domain:kotest.io)",
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Read(//Users/yonatankarp-rudin/.claude/**)",
      "WebSearch"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|Task",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/pre-tool-tdd-reminder.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/post-todo-check.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/validate-todos.sh",
            "description": "Validate that all TODO items are completed before finishing the task"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/validate-todos.sh",
            "description": "Validate that all TODO items are completed before subagent finishes"
          }
        ]
      }
    ]
  }
}