{
  "permissions": {
    "allow": [
      "Bash(./gradlew:*)",
      "WebFetch(domain:kotest.io)",
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Read(//Users/yonatankarp-rudin/.claude/**)",
      "WebSearch"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|Task",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/hooks.sh PreToolUse",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/hooks.sh Stop",
            "description": "Validate TODOs, run quality checks, and update tasks.md when finishing"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/hooks.sh SubagentStop",
            "description": "Validate TODOs, run quality checks, and update tasks.md when subagent finishes"
          }
        ]
      }
    ]
  }
}
